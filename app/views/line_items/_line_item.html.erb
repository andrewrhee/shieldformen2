<tr>
<td>
	<div class="add-remove">
	<%= button_to "+", increment_line_item_path(line_item), method: :post, class: 'btn btn-small btn-inverse' %>
	</div>
	<div class="add-remove">
	<%= button_to "-", decrement_line_item_path(line_item), method: :post, class: 'btn btn-small btn-inverse' %> 
	</div>
</td>
<td class="muted center_text"><%= image_tag(line_item.product.image_url, class: "cart-image") %></td>
<td><%= line_item.product.title %></td>
<td><%= line_item.quantity %></td>
<td><%= number_to_currency(line_item.product.price) %></td>
<td><%= number_to_currency(line_item.total_price) %></td>
</tr>