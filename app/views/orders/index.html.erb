<%= provide(:title, 'All orders') %>
<div class="row">
    <aside class="span3">
        <section>
            
        </section>
        <%= render 'shared/admin-left-nav' %>
    </aside>
    <div class="span9">
        <div class="content">

        <h1>All Orders</h1>
        <%= will_paginate %>
        <table>
          <tr>
            <th>Order #</th>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Address</th>
            <th>City</th>
            <th>Postal code</th>
            <th>Status</th>
            <th>Price</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.email %></td>
            <td><%= order.bill_to_first_name %></td>
            <td><%= order.bill_to_last_name %></td>
            <td><%= order.bill_to_address %></td>
            <td><%= order.bill_to_city %></td>
            <td><%= order.bill_to_postal_code %></td>
            <td><%= order.status %></td>
            <td><%= order.price %></td>
            <td><%= link_to 'Show', order %></td>
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </table>
        <%= will_paginate %>
        <br />

        <%= link_to 'New Order', new_order_path %>
        </div>
    </div>
</div>
