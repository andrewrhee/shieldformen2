<%= provide(:title, 'All plans') %>
<div class="row">
  <aside class="span3">
    <section>
      
    </section>
    <%= render 'shared/admin-left-nav' %>
  </aside>
  <div class="span9">
    <div class="content products">
		<h1>All plan</h1>

		<table>
		  <tr>
		  	<th>Plan #</th>
		    <th>Name</th>
		    <th>Price</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>

		<% @plans.each do |plan| %>
		  <tr>
		  	<td><%= plan.id %></td>
		    <td><%= plan.name %></td>
		    <td><%= plan.price %></td>
		    <td><%= link_to 'Show', plan %></td>
		    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
		    <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		<%= link_to 'New Plan', new_plan_path %>
		</div>
  </div>
</div>
