<%= form_for(@plan) do |f| %>
  <%= render 'shared/error_messages', object: @plan %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit "Save" , class: "btn btn-primary btn-large" %>
  </div>
<% end %>
