<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span3">
		<section>
			
		</section>
		<div class="left-nav">
			<h2>Your Account</h2>
			
			<ul>
				<% if current_user.admin? %>
				<li><%= link_to 'All Users', users_path %></li>
				<li><%= link_to 'Products', products_path %></li>
				<% end %>
				<li><%= link_to "Account Info", edit_user_path(@user) %></li>
				<li><a href="#">Your Orders</a></li>
				<li><a href="#">Credits</a></li>
			</ul>
		</div><!-- end left-nav -->
	</aside>
	<div class="span9">
		<div class="content">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>
		</div>
	</div>
</div>
